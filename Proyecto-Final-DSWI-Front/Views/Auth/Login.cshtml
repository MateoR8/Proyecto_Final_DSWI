@model LoginRequest

<link href="@Url.Content("~/css/Dulceria.css")" rel="stylesheet" />


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <style>
        .login-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            text-align: center;
        }

        .login-header {
            font-size: 48px;
            color: #fbd1f2;
            text-shadow: 0 0 15px #f77ade;
            margin-bottom: 30px;
            font-family: 'Orbitron-Bold', sans-serif;
        }

        .login-form {
            display: flex;
            flex-direction: column;
            gap: 20px;
            width: 300px;
        }

        .login-input {
            background-color: #1c1c1c;
            color: #ffffff;
            border: 2px solid #f77ade;
            border-radius: 10px;
            padding: 10px;
            font-family: 'Orbitron', sans-serif;
            box-shadow: 0 0 10px #f77ade;
            outline: none;
        }

            .login-input::placeholder {
                color: #aaa;
            }

        .login-button {
            background-color: transparent;
            border: 2px solid #00fff7;
            color: #00fff7;
            text-shadow: 0 0 8px #00fff7;
            padding: 10px;
            border-radius: 10px;
            font-size: 18px;
            font-family: 'Orbitron-Bold', sans-serif;
            transition: all 0.3s ease-in-out;
        }

            .login-button:hover {
                background-color: #00fff7;
                color: black;
                text-shadow: none;
            }

    </style>
</head>
<body>
    <div class="login-container">
        <h2 class="login-header">Login</h2>
        <form asp-action="Login" method="post" class="login-form">
            <input asp-for="nombreUsuario" placeholder="Usuario" class="form-control login-input" />
            <input asp-for="contrasenia" type="password" placeholder="Contraseña" class="form-control login-input" />
            <button class="btn btn-primary login-button" type="submit">Ingresar</button>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@model Proyecto_Final_DSWI_Front.Models.Salas

@{
    ViewData["Title"] = "Edit";
}

<link href="@Url.Content("~/css/create.css")" rel="stylesheet" />

<h1>Edit</h1>
<div class="in-flex" id="cont-login">
    <div class="cont-form">
        <div class="form-head">
            <h4>Salas</h4>
        </div>
        <hr />
        <div class="form-body">

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="sn-form in-flex">
                    <div class="item in-flex" hidden>
                        <input asp-for="id_sala" />
                        <label asp-for="id_sala"></label>
                        <span asp-validation-for="id_sala"></span>
                    </div>
                </div>
                <div class="sn-form in-flex">
                    <div class="item in-flex">
                        <input asp-for="cod_sala" placeholder=" " />
                        <label asp-for="cod_sala"></label>
                        <span asp-validation-for="cod_sala"></span>
                    </div>
                </div>
                <div class="sn-form in-flex">
                    <div class="item in-flex">
                        <input asp-for="capacidad_sala" placeholder=" " />
                        <label asp-for="capacidad_sala"></label>
                        <span asp-validation-for="capacidad_sala"></span>
                    </div>
                </div>
                <div class="cont-submit">
                    <input type="submit" value="Save" />
                    <a asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <h1>
        @ViewBag.mensaje
    </h1>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
